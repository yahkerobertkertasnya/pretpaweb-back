
#import "user.graphqls"

type Tweet {
    ID: ID!
    user: User!
    content: String!
    createdAt: Time!
}

input newTweet {
    content: String!
}

type Subscription {
    getUserTweets(id: ID!): [Tweet]!
}

extend type Query {
    getUserTweets(id: ID!): [Tweet]!
    getAllTweets: [Tweet]! @auth
}

extend type Mutation {
    createTweet(inputTweet: newTweet!): Tweet! @auth
}